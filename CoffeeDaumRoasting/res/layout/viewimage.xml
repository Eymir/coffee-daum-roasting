<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#ffffff"
    >
    <LinearLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	    <Button
	    android:id="@+id/testbtn"
	    android:text="검색"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	    <EditText 
	    android:id="@+id/findet"
	    android:text="이름을 입력하세요"
		android:textColor="#dddddd"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
    android:id="@+id/viewnametv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/viewbeantv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />    
    <TextView
    android:id="@+id/viewtheyeartv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />    
    <TextView
    android:id="@+id/viewdriedtv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/viewthedaytv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/viewstarttemperaturetv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/contenttv"
    android:text="없음"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    />
    </LinearLayout>